{
  "name": "minigame-std",
  "description": "Cross-platform standard library for WeChat minigame and web browsers with unified APIs for crypto, fs, fetch, storage, and more.",
  "author": "jiang115jie@gmail.com",
  "license": "MIT",
  "version": "2.0.2",
  "type": "module",
  "main": "dist/main.cjs",
  "module": "dist/main.mjs",
  "types": "dist/types.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "source": "./src/mod.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs",
      "default": "./dist/main.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "check": "pnpm exec tsc --noEmit",
    "prebuild": "pnpm run check",
    "build": "pnpm exec vite build && pnpm exec rollup --config rollup.config.ts",
    "docs": "pnpm exec typedoc",
    "prepublishOnly": "pnpm run build",
    "test": "pnpm exec vitest run --coverage",
    "test:watch": "pnpm exec vitest watch",
    "test:ui": "pnpm exec vitest --ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JiangJie/minigame-std.git"
  },
  "keywords": [
    "minigame",
    "mini-game",
    "wechat",
    "weixin",
    "wx",
    "qq",
    "douyin",
    "tt",
    "alipay",
    "my",
    "mina",
    "cross-platform",
    "browser",
    "std",
    "standard-library",
    "fetch",
    "request",
    "fs",
    "filesystem",
    "opfs",
    "storage",
    "crypto",
    "md5",
    "sha",
    "hmac",
    "rsa",
    "random",
    "uuid",
    "base64",
    "codec",
    "socket",
    "websocket",
    "clipboard",
    "network",
    "audio",
    "webaudio",
    "video",
    "image",
    "performance",
    "event",
    "lbs",
    "geolocation",
    "location",
    "platform",
    "device"
  ],
  "dependencies": {
    "@happy-ts/fetch-t": "^1.9.1",
    "@std/path": "npm:@jsr/std__path@^1.1.4",
    "fflate": "^0.8.2",
    "happy-codec": "^1.1.0",
    "happy-opfs": "^2.0.2",
    "happy-rusty": "^1.9.1",
    "minigame-api-typings": "^3.8.16",
    "rsa-oaep-encryption": "^1.1.0",
    "tiny-future": "^1.2.0"
  }
}
